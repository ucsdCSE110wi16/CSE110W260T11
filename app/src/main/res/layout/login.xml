<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/container_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/container_logo_login">

        // Placeholder logo
        <ImageView android:id="@+id/logo"
            android:src="@drawable/suitcase55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/logo_login"/>

    </RelativeLayout>

    <RelativeLayout android:id="@+id/container_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/container_header">

        <TextView android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/login_header"
            android:text="@string/app_name"/>

    </RelativeLayout>


    <EditText android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        style="@style/login_edittext"
        />




    <EditText android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:hint="Password"
        style="@style/login_edittext"
        />

    <Button android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        style="@style/button_fullwidth"
        />

    <Button android:id="@+id/createaccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        style="@style/button_fullwidth"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout android:id="@+id/forgotpass"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/forgotpass_button">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/forgotpass_button_innertext"
                />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>