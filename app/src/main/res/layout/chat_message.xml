<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    >

    <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    card_view:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="18dp"
            android:paddingLeft="18dp"
            android:paddingBottom="18dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                >

                <TextView android:id="@+id/sender_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anthony Altieri"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="24sp"
                    android:paddingTop="4dp"

                    />

                <TextView android:id="@+id/message_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:20 pm"
                    android:textColor="@android:color/secondary_text_light_nodisable"
                    android:layout_below="@id/sender_username"
                    />

                <!--
                <ImageView android:id="@+id/profile_picture"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/profile_default"
                    android:layout_alignParentRight="true"
                    />
                -->

            </RelativeLayout>

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/loremipsum"
                android:layout_alignParentBottom="true"
                />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
