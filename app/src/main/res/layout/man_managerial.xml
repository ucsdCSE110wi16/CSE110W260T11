<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#EEEEEE"
        >

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:background="@color/accent"
            >
        <TextView android:id="@+id/header_shifts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Shifts"
        android:textColor="#FAFAFA"
        android:textSize="38dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />

       </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >

            <Button android:id="@+id/btnShifts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:text="Go To Shift List"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:backgroundTint="@color/button_dark"
                android:textColor="#FAFAFA"
                />
        </RelativeLayout>


  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:translationZ="3dp">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="22dp"
    >

   <RelativeLayout
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:id="@+id/rv_sd">

                    <TextView android:id="@+id/text_sd"
                       android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose a date"
                         android:textColor="#333"
                         android:textSize="16dp"
                         android:layout_marginLeft="18dp"
                         android:layout_centerVertical="true"
                         />

                    <RelativeLayout android:id="@+id/container-startdate"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="#BDBDBD"
                        android:layout_toLeftOf="@id/btnStartDay"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        >

                        <TextView android:id="@+id/startdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03/03/2016"
                            android:textColor="#FAFAFA"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_centerHorizontal="true"

                            />

                    </RelativeLayout>


                     <Button
                         android:id="@+id/btnStartDay"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="DATE"
                         android:textColor="#FAFAFA"
                         android:minWidth="130dp"
                         android:paddingTop="22dp"
                         android:paddingBottom="22dp"
                         android:backgroundTint="@color/button_dark"
                         android:layout_alignParentRight="true"
                         android:layout_marginRight="12dp"
                         />


                 </RelativeLayout>

                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="22dp"
                     android:id="@+id/rv_st">

                     <TextView android:id="@+id/text_st"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Starting time"
                         android:textColor="#333"
                         android:textSize="16dp"
                         android:layout_marginLeft="18dp"
                         android:layout_centerVertical="true"
                         />

                     <RelativeLayout android:id="@+id/container-starttime"
                         android:layout_width="90dp"
                         android:layout_height="wrap_content"
                         android:background="#BDBDBD"
                         android:layout_toLeftOf="@id/btnStartTime"
                         android:layout_centerVertical="true"
                         android:layout_marginRight="8dp"
                         >

                         <TextView android:id="@+id/starttime"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="2:00pm"
                             android:textColor="#FAFAFA"
                             android:paddingTop="12dp"
                             android:paddingBottom="12dp"
                             android:layout_centerHorizontal="true"

                             />

                     </RelativeLayout>


                     <Button
                         android:id="@+id/btnStartTime"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="START TIME"
                         android:textColor="#FAFAFA"
                         android:minWidth="130dp"
                         android:paddingTop="22dp"
                         android:paddingBottom="22dp"
                         android:backgroundTint="@color/button_dark"
                         android:layout_alignParentRight="true"
                         android:layout_marginRight="12dp"
                         />


                 </RelativeLayout>

                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="22dp"
                     android:id="@+id/rv_et"
                     android:layout_marginBottom="22dp"

                     >

                     <TextView android:id="@+id/text_et"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Ending time"
                         android:textColor="#333"
                         android:textSize="16dp"
                         android:layout_marginLeft="18dp"
                         android:layout_centerVertical="true"
                         />


                     <RelativeLayout android:id="@+id/container-endtime"
                         android:layout_width="90dp"
                         android:layout_height="wrap_content"
                         android:background="#BDBDBD"
                         android:layout_toLeftOf="@id/btnEnd"
                         android:layout_centerVertical="true"
                         android:layout_marginRight="8dp"
                         >

                         <TextView android:id="@+id/endtime"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="10:30pm"
                             android:textColor="#FAFAFA"
                             android:paddingTop="12dp"
                             android:paddingBottom="12dp"
                             android:layout_centerHorizontal="true"

                             />

                     </RelativeLayout>


                     <Button
                         android:id="@+id/btnEnd"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="END TIME"
                         android:textColor="#FAFAFA"
                         android:minWidth="130dp"
                         android:paddingTop="22dp"
                         android:paddingBottom="22dp"
                         android:backgroundTint="@color/button_dark"
                         android:layout_alignParentRight="true"
                         android:layout_marginRight="12dp"
                         />


                 </RelativeLayout>



                 </LinearLayout>

             </android.support.v7.widget.CardView>

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="32dp"
                 >

                     <Button android:id="@+id/shift_save"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:paddingTop="22dp"
                         android:paddingBottom="22dp"
                         android:text="SAVE SHIFT"
                         android:layout_marginRight="22dp"
                         android:layout_marginLeft="22dp"
                         android:backgroundTint="@color/button_dark"
                         android:textColor="#FAFAFA"
                         />
            </RelativeLayout>
        <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingTop="22dp"
                     android:paddingBottom="22dp"
                     android:layout_marginTop="14dp"
                     android:background="@color/accent"
                     >

                     <TextView android:id="@+id/header_invite"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Invite Employees To Business"
                         android:textColor="#FAFAFA"
                         android:textSize="38dp"
                         android:gravity="center"
                         android:layout_centerHorizontal="true"
                         android:textStyle="bold"
                         />

                 </RelativeLayout>

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="22dp"
                 android:layout_marginBottom="12dp"
                 >

                 <Button android:id="@+id/btnInvite"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingTop="22dp"
                     android:paddingBottom="22dp"
                     android:text="INVITE"
                     android:layout_marginRight="22dp"
                     android:layout_marginLeft="22dp"
                     android:backgroundTint="@color/button_dark"
                     android:textColor="#FAFAFA"
                     />
             </RelativeLayout>

        </LinearLayout>

</ScrollView>