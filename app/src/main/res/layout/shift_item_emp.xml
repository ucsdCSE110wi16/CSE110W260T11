<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="vertical"
            android:background="@android:color/holo_green_light"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vacant"
                    android:textSize="32sp"
                    android:textColor="@android:color/primary_text_light"
                    android:layout_centerVertical="true"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#41111111"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:layout_alignParentRight="true"
                    >

                    <TextView android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08/08/94"
                        android:textSize="32sp"
                        android:textColor="@android:color/primary_text_dark_nodisable"
                        android:layout_centerVertical="true"
                        />


                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            >

            <LinearLayout android:id="@+id/employe_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                >

                <TextView android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="20sp"
                    android:textColor="@android:color/secondary_text_light"

                    />
                <TextView android:id="@+id/firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:textColor="@android:color/primary_text_light"
                    android:paddingLeft="22dp"
                    />

                <TextView android:id="@+id/lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:textColor="@android:color/primary_text_light"
                    android:paddingLeft="16dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/employe_info"
                >
                <TextView android:id="@+id/txtstart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start:"
                    android:textSize="20sp"
                    android:textColor="@android:color/secondary_text_light"

                    />
                <TextView android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30pm"
                    android:textSize="20dp"
                    android:textColor="@android:color/primary_text_light"
                    android:paddingLeft="18dp"
                    />

                <TextView android:id="@+id/txtend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start:"
                    android:textSize="20sp"
                    android:textColor="@android:color/secondary_text_light"
                    android:paddingLeft="18dp"

                    />

                <TextView android:id="@+id/end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:30pm"
                    android:textSize="20dp"
                    android:textColor="@android:color/primary_text_light"
                    android:paddingLeft="22dp"
                    />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <Button android:id="@+id/request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLAIM SHIFT"
                android:textColor="@android:color/holo_red_dark"
                android:minWidth="200dp"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                style="?android:borderlessButtonStyle"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                />

            <TextView android:id="@+id/shift_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="oid"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:visibility="invisible"
                />

        </RelativeLayout>


    </LinearLayout>




</android.support.v7.widget.CardView>