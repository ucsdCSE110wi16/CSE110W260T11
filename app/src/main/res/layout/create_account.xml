<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    >

    <RelativeLayout android:id="@+id/container_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/container_header"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="18dp"
            android:textSize="40dp"
            android:text="Create Account"
            android:textColor="#FAFAFA"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

    <EditText android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="22dp"
        android:hint="Email"
        android:paddingLeft="8dp"
        android:textCursorDrawable="@null"
        android:textColor="#FAFAFA"
        android:backgroundTint="#FAFAFA"
        android:textColorHint="#FAFAFA"
        android:inputType="textEmailAddress" />

    <EditText android:id="@+id/fname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="22dp"
        android:hint="First Name"
        android:paddingLeft="8dp"
        android:textCursorDrawable="@null"
        android:textColor="#FAFAFA"
        android:backgroundTint="#FAFAFA"
        android:textColorHint="#FAFAFA"
        android:inputType="textEmailAddress" />

    <EditText android:id="@+id/lname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="22dp"
        android:hint="Last Name"
        android:paddingLeft="8dp"
        android:textCursorDrawable="@null"
        android:textColor="#FAFAFA"
        android:backgroundTint="#FAFAFA"
        android:textColorHint="#FAFAFA"
        android:inputType="textEmailAddress" />

    <EditText android:id="@+id/password1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="22dp"
        android:hint="Password (min 6 chars)"
        android:paddingLeft="8dp"
        android:textCursorDrawable="@null"
        android:textColor="#FAFAFA"
        android:backgroundTint="#FAFAFA"
        android:textColorHint="#FAFAFA"
        android:inputType="textPassword" />

    <EditText android:id="@+id/password2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="22dp"
        android:hint="Re-Enter Password"
        android:paddingLeft="8dp"
        android:textCursorDrawable="@null"
        android:textColor="#FAFAFA"
        android:backgroundTint="#FAFAFA"
        android:textColorHint="#FAFAFA"
        android:inputType="textPassword" />

    <RelativeLayout android:id="@+id/container_buttons"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <Button android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:textColor="#FAFAFA"
                android:backgroundTint="@color/button_dark"
                android:text="Submit"
                android:layout_above="@+id/cancel"
                android:layout_marginRight="8dp"
                />

            <Button android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:textColor="#FAFAFA"
                android:backgroundTint="@color/button_dark"
                android:text="Cancel"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>